<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.zahidhasan.discart.fragments.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:id="@+id/rel_one">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/lin_one"
            android:layout_centerHorizontal="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/category_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add to list"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="48dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/category_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Call"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="48dp">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/category_24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Review it"
                    android:gravity="center"
                    android:textStyle="bold"/>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/lin_one"
            android:layout_marginTop="32dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="House 32, Road 1, Nikunja-2, Khilkhet, Dhaka"
                android:textStyle="bold"
                android:paddingStart="8dp"
                android:id="@+id/txtvw_address"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:drawableStart="@drawable/category_24dp"
                android:text="Direction"
                android:textSize="13sp"
                android:paddingEnd="16dp"
                android:layout_below="@id/txtvw_address"
                android:textAllCaps="false"
                android:drawablePadding="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvw_address"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:drawableStart="@drawable/category_24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:text="Closed"/>

        </RelativeLayout>
    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_one"
        android:id="@+id/card_tags"
        android:layout_marginTop="16dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tags"
                android:textStyle="bold"
                android:id="@+id/txtvw_tags"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtvw_tags"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:text="Casual Dining, Burger, Dinner, Japanese, American, Thai, Breakfast"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_tags"
        android:id="@+id/card_menu"
        android:layout_marginTop="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/category_24dp"
                android:text="Menu"
                android:textSize="13sp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:textAllCaps="false"
                android:drawablePadding="8dp"
                android:id="@+id/btn_menu"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:drawableStart="@drawable/category_24dp"
                android:text="Offers"
                android:layout_toEndOf="@id/btn_menu"
                android:textSize="13sp"
                android:paddingEnd="16dp"
                android:paddingStart="16dp"
                android:textAllCaps="false"
                android:drawablePadding="8dp"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_menu"
        android:layout_marginTop="4dp"
        android:id="@+id/card_features">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Additional Features"
                android:textStyle="bold"
                android:id="@+id/txtvw_features"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:layout_below="@id/txtvw_features">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Wi-Fi available"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/category_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Wi-Fi available"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/category_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Wi-Fi available"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/category_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Wi-Fi available"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/category_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Wi-Fi available"
                    android:layout_marginStart="8dp"
                    android:drawableStart="@drawable/category_24dp"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical"/>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/card_features"
        android:id="@+id/card_uber"
        android:layout_marginTop="4dp">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:text="Get a Ride in 2 Minutes"
                android:layout_marginStart="16dp"
                android:drawableStart="@drawable/category_24dp"
                android:drawablePadding="8dp"
                android:textStyle="bold"
                android:gravity="center_vertical"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
